extends ../base

block content
    div#videoContainer
        video(src="/"+video.videoUrl)
        div
            button#play Play 
            button#mute Mute
            input(type="range", value=0.5, step="0.1", min="0", max="1")#volume
            div 
                span#currenTime 0:00
                span  / 
                span#totalTime 0:00
            div
                input(type="range", value=0, step="1", min="0")#timeline
            div 
                button#fullscreen Enter Full Screen


    //-
        div.video__desc
            h2=video.title
            small uploaded by 
                a(href=`/users/${video.owner._id}`).video__owner #{video.owner.name+" "}
                | â€¢ #{video.createdAt}
            p=video.description
            ul
                each hashtag in video.hashtags
                    li=hashtag
        if String(loggedInUser._id) === String(video.owner._id)
            p.video__edit
                a(href=`${video.id}/edit`) Edit Video &rarr;
                br
                a(href=`${video.id}/delete`) Delete Video &rarr;

block scripts 
    script(src="/static/js/videoPlayer.js")